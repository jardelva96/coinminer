<Window x:Class="Coinminer.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coinminer UI (Preview)" Height="720" Width="1200"
        Background="#fafafa" Foreground="#1f2937">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#0c1524" Padding="16" >
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <TextBlock Text="COINMINER" Foreground="#f59e0b" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Early adopter" Foreground="#e5e7eb" FontSize="12"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Top" Spacing="12">
                    <TextBlock Text="Miner" Foreground="#fbbf24" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Stats" Foreground="#e5e7eb" FontSize="14"/>
                    <TextBlock Text="Referrals" Foreground="#e5e7eb" FontSize="14"/>
                    <TextBlock Text="Devices" Foreground="#e5e7eb" FontSize="14"/>
                    <TextBlock Text="Transactions" Foreground="#e5e7eb" FontSize="14"/>
                    <Separator Margin="0,8,0,8"/>
                    <TextBlock Text="About" Foreground="#cbd5e1" FontSize="13"/>
                    <TextBlock Text="Support" Foreground="#cbd5e1" FontSize="13"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Margin="0,24,0,0">
                    <Button Content="Join Telegram" Background="#1e293b" Foreground="#e5e7eb" BorderBrush="#1e293b" Padding="8,6"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Column="1" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Early adopter" Foreground="#1f2937" FontWeight="SemiBold"/>
                    <TextBlock Text="263,972 SATOSHIS" Foreground="#f59e0b" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="SEAN" VerticalAlignment="Center"/>
                    <Button Content="Sign Out" Padding="10,6" BorderBrush="#e5e7eb" Background="White"/>
                    <Button Content="_" Width="32"/>
                    <Button Content="X" Width="32"/>
                </StackPanel>
            </Grid>

            <!-- KPI cards -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="White" Padding="16" CornerRadius="10" BorderBrush="#e5e7eb" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Current Balance Satoshis" Foreground="#6b7280"/>
                        <TextBlock Text="263,972" FontSize="28" FontWeight="Bold" Foreground="#f59e0b"/>
                        <TextBlock Text="($1.66)" Foreground="#9ca3af"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="White" Padding="16" CornerRadius="10" BorderBrush="#e5e7eb" BorderThickness="1" Margin="12,0">
                    <StackPanel>
                        <TextBlock Text="Daily Earning Potential" Foreground="#6b7280"/>
                        <TextBlock Text="10,840" FontSize="28" FontWeight="Bold" Foreground="#1f2937"/>
                        <TextBlock Text="($0.68)" Foreground="#9ca3af"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="White" Padding="16" CornerRadius="10" BorderBrush="#e5e7eb" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Monthly Earning Potential" Foreground="#6b7280"/>
                        <TextBlock Text="325,206" FontSize="28" FontWeight="Bold" Foreground="#1f2937"/>
                        <TextBlock Text="($20.37)" Foreground="#9ca3af"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Controls and selections -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="White" CornerRadius="10" Padding="16" BorderBrush="#e5e7eb" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,24,0">
                            <TextBlock Text="Status" Foreground="#6b7280"/>
                            <Button Content="Start" Background="#f59e0b" Foreground="White" Padding="14,8" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="Paused" Foreground="#9ca3af" FontSize="12"/>
                        </StackPanel>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CPU Coin:" Foreground="#6b7280"/>
                                <TextBlock Text="0 h/s (Cryptonight V7)" FontWeight="SemiBold"/>
                                <TextBlock Text="CPU Enabled" Foreground="#6b7280"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="GPU Coin:" Foreground="#6b7280"/>
                                <TextBlock Text="0 h/s (Lyra2Rev2)" FontWeight="SemiBold"/>
                                <TextBlock Text="GPU Limit" Foreground="#6b7280"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="GPU Selection: Auto" Foreground="#6b7280"/>
                                <Border BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="6" Padding="8" Margin="0,4,0,0">
                                    <WrapPanel ItemWidth="64" ItemHeight="32">
                                        <TextBlock Text="Auto" Width="64"/>
                                        <TextBlock Text="Ethereum" Width="64"/>
                                        <TextBlock Text="Ethereum Classic" Width="90"/>
                                        <TextBlock Text="Monero" Width="64"/>
                                        <TextBlock Text="Ravencoin" Width="64"/>
                                        <TextBlock Text="Verge" Width="64"/>
                                        <TextBlock Text="Vertcoin" Width="64"/>
                                        <TextBlock Text="Zcash" Width="64"/>
                                        <TextBlock Text="Zencash" Width="64"/>
                                    </WrapPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Payout Coin:" Foreground="#6b7280"/>
                            <TextBlock Text="BTC" FontWeight="Bold" FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Only mine when idle" Foreground="#6b7280"/>
                                <ToggleButton Content="ON" Width="50" Height="24"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Launch on startup" Foreground="#6b7280"/>
                                <ToggleButton Content="OFF" Width="50" Height="24"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Margin="0,12,0,0" Background="White" CornerRadius="10" Padding="16" BorderBrush="#e5e7eb" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Recent activity" FontSize="14" FontWeight="SemiBold"/>
                        <ItemsControl Margin="0,8,0,0">
                            <ItemsControl.Items>
                                <TextBlock Text="FOUND! Hash 0000c8202ad6... nonce 74756839 (reward +50)"/>
                                <TextBlock Text="mining.notify clean_jobs=1 (job_id abc123)"/>
                                <TextBlock Text="set_difficulty -> 1024 (pool1.example.com)"/>
                            </ItemsControl.Items>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
