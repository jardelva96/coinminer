<Window x:Class="Coinminer.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solocoinminer"
        Height="680" Width="1100"
        MinWidth="920" MinHeight="600"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource TextBrush}"
        FontFamily="Segoe UI Variable"
        FontSize="13"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/app-icon.png"
        Closing="OnClosing">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarBrush}"
                CornerRadius="0,16,16,0"
                Padding="12"
                Margin="0,0,12,0">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,20">
                    <TextBlock Text="SOLOCOINMINER" Foreground="{DynamicResource AccentBrush}" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Pronto para minerar" Foreground="{DynamicResource SidebarMutedBrush}" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top">
                    <Button x:Name="NavHome" Content="Inicio" Tag="Home" Click="OnNavClick"
                            Style="{StaticResource NavButton}" Foreground="{DynamicResource SidebarMutedBrush}" Margin="0,0,0,6"/>
                    <Button x:Name="NavMiner" Content="Miner" Tag="Miner" Click="OnNavClick"
                            Style="{StaticResource NavButton}" Foreground="{DynamicResource SidebarMutedBrush}" Margin="0,0,0,6"/>
                    <Button x:Name="NavStats" Content="Stats" Tag="Stats" Click="OnNavClick"
                            Style="{StaticResource NavButton}" Foreground="{DynamicResource SidebarMutedBrush}" Margin="0,0,0,6"/>
                    <Button x:Name="NavDevices" Content="Dispositivos" Tag="Devices" Click="OnNavClick"
                            Style="{StaticResource NavButton}" Foreground="{DynamicResource SidebarMutedBrush}" Margin="0,0,0,6"/>
                    <Button x:Name="NavTransactions" Content="Transacoes" Tag="Transactions" Click="OnNavClick"
                            Style="{StaticResource NavButton}" Foreground="{DynamicResource SidebarMutedBrush}" Margin="0,0,0,6"/>
                    <Separator Margin="0,12,0,12" Background="{DynamicResource SidebarHoverBrush}"/>
                    <Button x:Name="NavSupport" Content="Suporte" Tag="Support" Click="OnNavClick"
                            Style="{StaticResource NavButton}" Foreground="{DynamicResource SidebarMutedBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0">
                    <TextBlock Text="Links" Foreground="{DynamicResource SidebarMutedBrush}" FontSize="12" Margin="0,0,0,8"/>
                    <Button Content="Entrar no Telegram"
                            Click="OnOpenTelegramClick"
                            Style="{StaticResource SecondaryButton}"
                            Background="{DynamicResource SidebarHoverBrush}"
                            Foreground="{DynamicResource SidebarTextBrush}"
                            BorderBrush="{DynamicResource SidebarHoverBrush}"
                            Margin="0,0,0,6"/>
                    <Button Content="Abrir Discord"
                            Click="OnOpenDiscordClick"
                            Style="{StaticResource SecondaryButton}"
                            Background="{DynamicResource SidebarHoverBrush}"
                            Foreground="{DynamicResource SidebarTextBrush}"
                            BorderBrush="{DynamicResource SidebarHoverBrush}"
                            Margin="0,0,0,6"/>
                    <Button Content="Site oficial"
                            Click="OnOpenWebsiteClick"
                            Style="{StaticResource SecondaryButton}"
                            Background="{DynamicResource SidebarHoverBrush}"
                            Foreground="{DynamicResource SidebarTextBrush}"
                            BorderBrush="{DynamicResource SidebarHoverBrush}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8">
                <!-- Top bar -->
                <Border Style="{StaticResource Card}" Padding="12" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Border Background="{DynamicResource BadgeBgBrush}" CornerRadius="999" Padding="8,4">
                            <TextBlock Text="Pronto para minerar" Foreground="{DynamicResource BadgeTextBrush}" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <TextBlock x:Name="BalanceTicker"
                                   Text="0 COINS"
                                   Foreground="{DynamicResource AccentBrush}"
                                   FontWeight="Bold"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                        <WrapPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <TextBlock Text="Modo escuro" Foreground="{DynamicResource MutedBrush}" Margin="0,0,8,0"/>
                            <ToggleButton x:Name="ThemeToggle" Checked="OnThemeToggleChanged" Unchecked="OnThemeToggleChanged"
                                          Style="{StaticResource TogglePill}" Margin="0,0,12,0"/>
                            <TextBlock Text="Usuario" FontWeight="SemiBold" Margin="0,0,12,0"/>
                            <Button Content="Sair" Click="OnSignOutClick" Style="{StaticResource SecondaryButton}"/>
                        </WrapPanel>
                    </Grid>
                </Border>

                <!-- Views -->
                <Grid>
                    <!-- Home -->
                    <StackPanel x:Name="HomeView" Visibility="Visible">
                        <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                            <StackPanel HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/logo.png" Width="180" Height="180" Margin="0,4,0,12"/>
                                <TextBlock Text="SOLOCOINMINER" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Mineracao simples, pronta para usar." Foreground="{DynamicResource MutedBrush}" Margin="0,6,0,0" TextAlignment="Center"/>
                                <TextBlock Text="Escolha sua carteira, configure pool/solo e inicie." Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0" TextAlignment="Center"/>
                                <WrapPanel HorizontalAlignment="Center" Margin="0,12,0,0">
                                    <Button Content="Ir para Miner" Click="OnGoToMinerClick" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                                    <Button Content="Abrir docs" Click="OnOpenDocsClick" Style="{StaticResource SecondaryButton}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Miner -->
                    <StackPanel x:Name="MinerView" Visibility="Collapsed">
                        <UniformGrid Columns="3" Margin="0,0,0,16">
                            <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                                <StackPanel>
                                    <TextBlock Text="Saldo atual" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="BalanceValue" Text="0" FontSize="28" FontWeight="Bold"
                                               Foreground="{DynamicResource AccentBrush}" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="BalanceFiat" Text="-" Foreground="{DynamicResource MutedBrush}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                                <StackPanel>
                                    <TextBlock Text="Taxa de hash" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="HashrateValue" Text="0 H/s" FontSize="28" FontWeight="Bold" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="AttemptsValue" Text="0 attempts" Foreground="{DynamicResource MutedBrush}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource Card}">
                                <StackPanel>
                                    <TextBlock Text="Blocos minerados" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="BlocksValue" Text="0" FontSize="28" FontWeight="Bold" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="UptimeValue" Text="Uptime: 0m" Foreground="{DynamicResource MutedBrush}"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Configuracao rapida" FontSize="14" FontWeight="SemiBold"/>
                                <UniformGrid Columns="3" Margin="0,10,0,0">
                                    <StackPanel Margin="0,0,12,0">
                                        <TextBlock Text="1. Carteira" FontWeight="SemiBold"/>
                                        <TextBlock Text="Crie uma carteira local ou informe um endereco externo para receber os pagamentos."
                                                   Foreground="{DynamicResource MutedBrush}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                        <WrapPanel Margin="0,8,0,0">
                                            <Button Content="Criar carteira" Click="OnCreateWalletClick"
                                                    Style="{StaticResource SecondaryButton}"/>
                                            <Button Content="Abrir carteira" Click="OnOpenWalletClick"
                                                    Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"/>
                                        </WrapPanel>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,12,0">
                                        <TextBlock Text="2. Pool ou solo" FontWeight="SemiBold"/>
                                        <TextBlock Text="Escolha o modo e preencha host, porta, usuario e senha do pool ou no."
                                                   Foreground="{DynamicResource MutedBrush}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                        <TextBlock Text="Use seu endereco da carteira no campo Usuario para receber."
                                                   Foreground="{DynamicResource MutedBrush}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="3. Minerar" FontWeight="SemiBold"/>
                                        <TextBlock Text="Clique em Aplicar configuracoes e depois Iniciar mineracao."
                                                   Foreground="{DynamicResource MutedBrush}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                        <WrapPanel Margin="0,8,0,0">
                                            <Button Content="Aplicar configuracoes" Click="OnApplySettingsClick"
                                                    Style="{StaticResource SecondaryButton}"/>
                                            <Button Content="Iniciar mineracao" Click="OnStartStopClick"
                                                    Style="{StaticResource PrimaryButton}" Margin="8,0,0,0"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="Status" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="StatusValue" Text="Idle" FontWeight="SemiBold" Margin="0,6,0,0"/>
                                    <Button x:Name="StartStopButton" Content="Iniciar mineracao" Click="OnStartStopClick"
                                            Style="{StaticResource PrimaryButton}" Margin="0,12,0,0"/>
                                    <Button x:Name="ApplySettingsButton" Content="Aplicar configuracoes" Click="OnApplySettingsClick"
                                            Style="{StaticResource SecondaryButton}" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="StatusDetailValue" Text="Aguardando inicio" Foreground="{DynamicResource MutedBrush}" FontSize="12" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="MinerPathValue" Text="Miner: -" Foreground="{DynamicResource MutedBrush}" FontSize="12" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="LastOutputValue" Text="Ultima saida: -" Foreground="{DynamicResource MutedBrush}" FontSize="12" Margin="0,6,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Perfil de mineracao" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="ProfileValue" Text="CPU: 0 H/s (SHA-256)" FontWeight="SemiBold" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="ProfileDetailValue" Text="GPU: n/a" FontWeight="SemiBold" Margin="0,6,0,0"/>
                                    <TextBlock Text="Stratum: pool local ou externo. Solo: node RPC local ou remoto. Local: demo." Foreground="{DynamicResource MutedBrush}" FontSize="12" Margin="0,8,0,0" TextWrapping="Wrap"/>
                                    <WrapPanel Margin="0,10,0,0">
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Dispositivo" Foreground="{DynamicResource MutedBrush}"/>
                                            <ComboBox x:Name="DeviceSelector" Width="150" SelectedIndex="0">
                                                <ComboBoxItem Content="CPU (Processador)" Tag="cpu"/>
                                                <ComboBoxItem Content="GPU (Placa de video)" Tag="gpu"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Modo" Foreground="{DynamicResource MutedBrush}"/>
                                            <ComboBox x:Name="ModeSelector" Width="150" SelectedIndex="0">
                                                <ComboBoxItem Content="Local (SHA-256)" Tag="local"/>
                                                <ComboBoxItem Content="Stratum (pool)" Tag="stratum"/>
                                                <ComboBoxItem Content="Solo (node)" Tag="solo"/>
                                            </ComboBox>
                                            <TextBlock Text="Local: demo. Stratum: pool local/externo. Solo: node RPC." Foreground="{DynamicResource MutedBrush}" FontSize="11" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Host" Foreground="{DynamicResource MutedBrush}"/>
                                            <TextBox x:Name="PoolHostBox" Width="160" Text="localhost"/>
                                            <TextBlock Text="Pool local: 127.0.0.1 | Pool externo: host do provedor" Foreground="{DynamicResource MutedBrush}" FontSize="11" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Porta" Foreground="{DynamicResource MutedBrush}"/>
                                            <TextBox x:Name="PoolPortBox" Width="80" Text="8332"/>
                                            <TextBlock Text="Stratum comum: 3333/4444. Node RPC: 8332." Foreground="{DynamicResource MutedBrush}" FontSize="11" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Usuario" Foreground="{DynamicResource MutedBrush}"/>
                                            <TextBox x:Name="PoolUserBox" Width="140" Text="worker"/>
                                            <TextBlock Text="Dica: use seu endereco de carteira como usuario." Foreground="{DynamicResource MutedBrush}" FontSize="11" Margin="0,6,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Senha" Foreground="{DynamicResource MutedBrush}"/>
                                            <TextBox x:Name="PoolPassBox" Width="100" Text="x"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Moeda" Foreground="{DynamicResource MutedBrush}"/>
                                            <ComboBox x:Name="CoinSelector" Width="140" SelectedIndex="0">
                                                <ComboBoxItem Content="Bitcoin" Tag="bitcoin"/>
                                                <ComboBoxItem Content="Litecoin" Tag="litecoin"/>
                                                <ComboBoxItem Content="Dogecoin" Tag="dogecoin"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Dificuldade" Foreground="{DynamicResource MutedBrush}"/>
                                            <TextBox x:Name="DifficultyBox" Width="70" Text="4"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,12,10">
                                            <TextBlock Text="Progresso" Foreground="{DynamicResource MutedBrush}"/>
                                            <TextBox x:Name="ProgressBox" Width="90" Text="10000"/>
                                        </StackPanel>
                                    </WrapPanel>
                                    <WrapPanel Margin="0,10,0,0">
                                        <Button Content="Auto" Style="{StaticResource ChipButton}"/>
                                        <Button Content="Ethereum" Style="{StaticResource ChipButton}"/>
                                        <Button Content="Monero" Style="{StaticResource ChipButton}"/>
                                        <Button Content="Ravencoin" Style="{StaticResource ChipButton}"/>
                                        <Button Content="Zcash" Style="{StaticResource ChipButton}"/>
                                    </WrapPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Moeda de pagamento" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock Text="BTC" FontWeight="Bold" FontSize="16" Margin="0,6,0,0"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,12,0,0">
                                        <TextBlock Text="Minerar apenas ocioso" Foreground="{DynamicResource MutedBrush}" Margin="0,0,8,0"/>
                                        <ToggleButton IsChecked="True" Style="{StaticResource TogglePill}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Atividade recente" FontSize="14" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding ActivityLog}" Margin="0,10,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource ActivityBgBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}" Margin="0,16,0,0">
                                <StackPanel>
                                <TextBlock Text="Carteira" FontSize="14" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <RadioButton x:Name="LocalWalletRadio" Content="Usar carteira local" IsChecked="True" Checked="OnWalletOptionChanged" Margin="0,0,12,0"/>
                                    <RadioButton x:Name="ExternalWalletRadio" Content="Usar endereco externo" Checked="OnWalletOptionChanged"/>
                                </StackPanel>
                                <TextBlock Text="Endereco de pagamento" Foreground="{DynamicResource MutedBrush}" Margin="0,8,0,0"/>
                                <TextBox x:Name="WalletAddressBox" Text="" IsEnabled="False" TextChanged="OnWalletAddressChanged"/>
                                <TextBlock x:Name="WalletBalanceValue" Text="Saldo: 0" Foreground="{DynamicResource MutedBrush}" Margin="0,6,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <Button x:Name="CreateWalletButton" Content="Criar carteira" Click="OnCreateWalletClick"
                                        Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                                    <Button x:Name="SaveWalletButton" Content="Salvar carteira" Click="OnSaveWalletClick"
                                        Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                                    <Button x:Name="OpenWalletButton" Content="Abrir arquivo" Click="OnOpenWalletClick"
                                        Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button x:Name="UseWalletForPoolButton" Content="Usar endereco no usuario do pool" Click="OnUseWalletForPoolClick"
                                        Style="{StaticResource SecondaryButton}"/>
                                    <Button x:Name="SwitchToStratumButton" Content="Mudar para Stratum" Click="OnSwitchToStratumClick"
                                        Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"/>
                                </StackPanel>
                                <TextBlock x:Name="WalletStatusValue" Text="Nenhuma carteira carregada" Foreground="{DynamicResource MutedBrush}" FontSize="12" Margin="0,8,0,0"/>
                                </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel x:Name="StatsView" Visibility="Collapsed">
                        <UniformGrid Columns="3" Margin="0,0,0,16">
                            <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                                <StackPanel>
                                    <TextBlock Text="Hashrate" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="StatsHashrateValue" Text="0 H/s" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="StatsAttemptsValue" Text="0 tentativas" Foreground="{DynamicResource MutedBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                                <StackPanel>
                                    <TextBlock Text="Mineracao" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="StatsUptimeValue" Text="0m" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="StatsBlocksValue" Text="Blocos minerados: 0" Foreground="{DynamicResource MutedBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource Card}">
                                <StackPanel>
                                    <TextBlock Text="Sistema" Foreground="{DynamicResource MutedBrush}"/>
                                    <TextBlock x:Name="StatsCpuValue" Text="CPU: --%" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                                    <TextBlock x:Name="StatsMemoryValue" Text="RAM: --" Foreground="{DynamicResource MutedBrush}"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Sessao atual" FontSize="14" FontWeight="SemiBold"/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <TextBlock Text="Modo" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StatsModeValue" Text="-" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                        <TextBlock Text="Moeda" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StatsCoinValue" Text="-" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                        <TextBlock Text="Endereco de pagamento" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StatsWalletValue" Text="-" TextWrapping="Wrap" FontSize="12"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Pool/No" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StatsPoolValue" Text="-" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                        <TextBlock Text="Usuario" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StatsUserValue" Text="-" FontWeight="SemiBold" Margin="0,4,0,8"/>
                                        <TextBlock Text="Minerador" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StatsMinerValue" Text="-" TextWrapping="Wrap" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Status da pool" FontSize="14" FontWeight="SemiBold"/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <TextBlock x:Name="StratumStatusValue" Text="Nao conectado" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StratumDifficultyValue" Text="Dificuldade: -" Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0"/>
                                        <TextBlock x:Name="StratumNotifyValue" Text="Notificacoes: 0" Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock x:Name="StratumSubmitValue" Text="Envios: 0 / 0" Foreground="{DynamicResource MutedBrush}"/>
                                        <TextBlock x:Name="StratumBytesValue" Text="Trafego: 0 / 0" Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0"/>
                                        <TextBlock x:Name="SoloStatusValue" Text="Solo: ocioso" Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Sistema" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="StatsSystemUptimeValue" Text="Tempo ligado: 0m" Foreground="{DynamicResource MutedBrush}" Margin="0,8,0,0"/>
                                <TextBlock x:Name="StatsOsValue" Text="SO: -" Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0"/>
                                <TextBlock x:Name="StatsMachineValue" Text="Maquina: -" Foreground="{DynamicResource MutedBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Devices -->
                    <StackPanel x:Name="DevicesView" Visibility="Collapsed" HorizontalAlignment="Stretch">
                        <Border Style="{StaticResource Card}" Margin="0,0,0,16" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <TextBlock Text="Dispositivos" FontSize="14" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding Devices}" Margin="0,10,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource ActivityBgBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8" HorizontalAlignment="Stretch">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Detail}" Foreground="{DynamicResource MutedBrush}" FontSize="12"/>
                                                    <TextBlock Text="{Binding Secondary}" Foreground="{DynamicResource MutedBrush}" FontSize="12" Margin="0,2,0,0"
                                                               Visibility="{Binding SecondaryVisibility}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Transactions -->
                    <StackPanel x:Name="TransactionsView" Visibility="Collapsed">
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Transactions" FontSize="14" FontWeight="SemiBold"/>
