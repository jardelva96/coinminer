<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AppBgColor">#F4F6FB</Color>
    <Color x:Key="AppBgAltColor">#E9EEF7</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#0F172A</Color>
    <Color x:Key="MutedTextColor">#6B7280</Color>
    <Color x:Key="BorderColor">#E5E7EB</Color>
    <Color x:Key="AccentColor">#F59E0B</Color>
    <Color x:Key="AccentHoverColor">#D97706</Color>
    <Color x:Key="SidebarColor">#0B1220</Color>
    <Color x:Key="SidebarHoverColor">#1C2537</Color>
    <Color x:Key="SidebarTextColor">#E5E7EB</Color>
    <Color x:Key="SidebarMutedColor">#94A3B8</Color>
    <Color x:Key="SidebarActiveColor">#17233A</Color>
    <Color x:Key="BadgeBgColor">#FEF3C7</Color>
    <Color x:Key="BadgeTextColor">#92400E</Color>
    <Color x:Key="ActivityBgColor">#F9FAFB</Color>

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedTextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}"/>
    <SolidColorBrush x:Key="SidebarMutedBrush" Color="{StaticResource SidebarMutedColor}"/>
    <SolidColorBrush x:Key="SidebarActiveBrush" Color="{StaticResource SidebarActiveColor}"/>
    <SolidColorBrush x:Key="BadgeBgBrush" Color="{StaticResource BadgeBgColor}"/>
    <SolidColorBrush x:Key="BadgeTextBrush" Color="{StaticResource BadgeTextColor}"/>
    <SolidColorBrush x:Key="ActivityBgBrush" Color="{StaticResource ActivityBgColor}"/>

    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AppBgColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AppBgAltColor}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>
